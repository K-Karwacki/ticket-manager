<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="dashboard-root" stylesheets="@../../style/dashboard/dashboard.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.ticketmanager.gui.controllers.dashboards.EventListDashboardController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="6.0" prefWidth="462.0" spacing="30.0">
         <children>
            <Button mnemonicParsing="false" onAction="#openEventCreator" style="-fx-padding: 10; -fx-background-color: #9CE2FF;" styleClass="btn" text="Add new" />
            <CheckBox fx:id="checkBoxEventList" mnemonicParsing="false" prefHeight="25.0" prefWidth="143.0" styleClass="checkBox" text="Only my events">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></CheckBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="50.0" top="10.0" />
         </padding>
      </HBox>
      <ScrollPane fx:id="eventListScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="550.0" styleClass="dashboard-root" stylesheets="@../../style/dashboard/dashboard.css">
         <content>
            <FlowPane fx:id="eventListRoot" alignment="CENTER" columnHalignment="CENTER" hgap="26.0" prefHeight="950.0" vgap="100.0">
      
                                                   <padding>
                  <Insets bottom="50.0" left="30.0" right="30.0" top="50.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>
   </children>
</VBox>
