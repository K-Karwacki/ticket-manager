<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" styleClass="dashboard-root" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.ticketmanager.gui.controllers.dashboards.UserListDashboardController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <Button alignment="CENTER" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#addNewCoordinator" prefHeight="37.0" prefWidth="82.0" style="-fx-background-color: #9CE2FF;" styleClass="btn" text="Add User">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button alignment="CENTER" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#onClickEditUser" prefHeight="37.0" prefWidth="82.0" style="-fx-background-color: #9CE2FF;" styleClass="btn" text="Edit User">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button alignment="CENTER" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#onClickDeleteUser" prefHeight="37.0" prefWidth="87.0" style="-fx-background-color: #9CE2FF;" styleClass="btn" text="Delete User">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
            </children>
         <VBox.margin>
            <Insets bottom="10.0" left="45.0" top="10.0" />
         </VBox.margin>
        </HBox>
        <ListView fx:id="usersListView" prefHeight="400.0" prefWidth="616.0" styleClass="dashboard-root" />
    </children>
   <stylesheets>
      <URL value="@../../style/dashboard/dashboard.css" />
      <URL value="@../../style/components/form.css" />
   </stylesheets>
</VBox>
